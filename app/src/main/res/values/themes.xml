<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartPillDispenser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

        <style name="Theme.SmartPillDispenser.NoActionBar">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>

        <style name="Theme.SmartPillDispenser.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <style name="Theme.SmartPillDispenser.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

        <style name="RippleStyleWhite">
            <item name="mrl_rippleOverlay">true</item>
            <item name="mrl_rippleColor">#80FFFFFF</item>
            <item name="mrl_rippleHover">true</item>
            <item name="mrl_rippleAlpha">0.2</item>
        </style>
</resources>